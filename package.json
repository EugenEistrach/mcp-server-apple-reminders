{
  "name": "mcp-server-apple-reminders",
  "version": "0.2.0",
  "description": "MCP server that provides native integration with Apple Reminders on macOS.",
  "module": "src/index.js",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-server-apple-reminders": "./dist/index.js"
  },
  "scripts": {
    "test": "jest",
    "build:ts": "tsc",
    "build:swift": "src/swift/build.sh && mkdir -p dist/swift/bin && cp -p src/swift/bin/GetReminders dist/swift/bin/GetReminders",
    "start": "node dist/index.js",
    "dev": "tsc --watch"
  },
  "keywords": [
    "mcp",
    "apple",
    "reminders",
    "automation"
  ],
  "author": "Frad Lee <https://frad.me>",
  "homepage": "https://frad.me",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "arktype": "^2.0.4",
    "moment": "^2.30.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/moment": "^2.13.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.8.2",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
